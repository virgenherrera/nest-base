  "contributors": [
    "Hugo Virgen (https://github.com/virgenherrera)"
  ],
  "engines": {
    "node": ">=24.10.0 <25",
    "pnpm": ">=10.20.0"
  },
  "scripts": {
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "pnpm run cleanup && pnpm run test:static && pnpm run test:unit && pnpm run test:e2e && pnpm run build:api-docs && pnpm run build:app",
    "watch:UT": "jest --watch --maxWorkers=1",
    "watch:E2E": "jest --config jest-e2e.config.ts --watch --maxWorkers=1",
    "test:static": "pnpm run eslintCheck && pnpm run prettierCheck",
    "test:unit": "jest",
    "test:e2e": "jest --config jest-e2e.config.ts",
    "build:api-docs": "ts-node -r tsconfig-paths/register ./scripts/build-open-api.ts",
    "build:app": "nest build",
    "eslintCheck": "eslint '{apps,libs,scripts,src,test}/**/*.ts'",
    "prettierCheck": "prettier --check '{apps,libs,scripts,src,test}/**/*.ts'",
    "prepare": "husky",
    "lintStaged": "lint-staged",
    "cleanup": "rimraf api-docs/ coverage/ dist/",
    "bumpDependencies": "pnpm dlx npm-check-updates"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "date-fns": "^4.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.46.2",
    "typescript": "^5.9.3"
  }
}
