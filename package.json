{
  "name": "nest-base",
  "version": "1.11.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "homepage": "https://github.com/virgenherrera/nest-base#readme",
  "bugs": {
    "url": "https://github.com/virgenherrera/nest-base/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virgenherrera/nest-base.git"
  },
  "contributors": [
    "Hugo Virgen (https://github.com/virgenherrera)"
  ],
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=24.12.0 <25"
  },
  "scripts": {
    "test": "pnpm run cleanup && pnpm run test:static && pnpm run test:unit && pnpm run test:e2e && pnpm run build:api-docs && pnpm run build:app",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "watch:UT": "jest --watch --maxWorkers=1",
    "watch:E2E": "jest --config jest-e2e.config.ts --watch --maxWorkers=1",
    "test:static": "pnpm run securityCheck && pnpm run eslintCheck && pnpm run prettierCheck",
    "test:unit": "jest",
    "test:e2e": "jest --config jest-e2e.config.ts",
    "build:api-docs": "ts-node -r tsconfig-paths/register ./scripts/build-open-api.ts",
    "build:app": "nest build -p tsconfig.build.prod.json",
    "securityCheck": "pnpm audit",
    "eslintCheck": "eslint '{apps,libs,scripts,src,test}/**/*.ts'",
    "prettierCheck": "prettier --check '{apps,libs,scripts,src,test}/**/*.ts'",
    "prepare": "husky",
    "lintStaged": "lint-staged",
    "cleanup": "rimraf api-docs/ coverage/ dist/",
    "bumpDependencies": "pnpm dlx npm-check-updates"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "date-fns": "^4.1.0",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "pnpm": {
    "overrides": {
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23"
    }
  }
}
